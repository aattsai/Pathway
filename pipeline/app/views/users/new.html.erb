<%= form_for :user, url: '/users' do |t| %>

  <%= t.label :email %>
  <%= t.text_field :email %>

  <%= t.label :password %>
  <%= t.password_field :password %>

  <%= t.label :first_name %>
  <%= t.text_field :first_name %>

  <%= t.label :last_name %>
  <%= t.text_field :last_name %>

  <%= t.label :institution %>
  <%= t.text_field :institution %>

  <%= t.label :title %>
  <%= t.text_field :title %>

  <%= t.submit %>
<% end %>
